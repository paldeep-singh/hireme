{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "build:package": {
            "dependsOn": [
                "^build:package"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "dev": {
            "dependsOn": [
                "^build:package"
            ],
            "persistent": true,
            "cache": false
        }
    }
}