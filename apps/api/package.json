{
	"name": "api",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "./scripts/dev.sh",
		"build": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.cjs --packages=external",
		"test:all": "./scripts/runTests.sh all",
		"test:coverage": "./scripts/runTests.sh all --coverage",
		"test:unit": "./scripts/runTests.sh unit",
		"test:integration": "./scripts/runTests.sh integration",
		"typecheck": "tsc --noEmit",
		"typegen": "kanel -c ./kanelrc.cjs && prettier --write ./src/db/generated/*",
		"lint": "eslint",
		"db:local:up": "docker compose -f ./docker/test.db.yml up -d",
		"db:local:down": "docker compose -f ./docker/test.db.yml down -v",
		"db:local:seed": "tsx ./scripts/seedTestDb.ts",
		"db:ci:up": "docker compose -f ./docker/test.db.ci.yml up -d",
		"db:ci:verify": "./db/verify_migration.sh",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@repo/api-types": "workspace:^",
		"@types/express-serve-static-core": "^5.0.6",
		"bcryptjs": "^3.0.2",
		"body-parser": "^1.20.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.7",
		"express": "^5.1.0",
		"http-status-codes": "^2.3.0",
		"kysely": "^0.27.6",
		"lodash-es": "^4.17.21",
		"pg": "^8.14.1",
		"postgres-interval": "^4.0.2",
		"postgres-range": "^1.1.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@faker-js/faker": "^9.5.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@types/body-parser": "^1.19.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.13.7",
		"@types/pg": "^8.11.11",
		"@types/supertest": "^6.0.2",
		"@vitest/coverage-v8": "3.0.8",
		"@vitest/eslint-plugin": "^1.1.38",
		"esbuild": "^0.25.5",
		"eslint": "^9.21.0",
		"globals": "^16.0.0",
		"jest-extended": "^4.0.2",
		"kanel": "^3.11.1",
		"kanel-kysely": "^0.7.0",
		"prettier": "3.5.3",
		"supertest": "^7.0.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vitest": "^3.0.8"
	}
}